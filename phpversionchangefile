sudo apt update
$ sudo apt install php8.2
sudo apt-get install -y php8.2-cli php8.2-common php8.2-fpm php8.2-mysql php8.2-zip php8.2-gd php8.2-mbstring php8.2-curl php8.2-xml php8.2-bcmath


set php version --  sudo update-alternatives --set php /usr/bin/php8.2
check for how many php version is installed-  sudo update-alternatives --config php
Disable current version -- $ sudo a2dismod php5.6
Enable current version --$ sudo a2enmod php7.1
$ sudo service apache2 restart
